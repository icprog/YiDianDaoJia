#picker {
  width: 100rpx;
  height: 10rpx;
}

.page {
  font-size: 25rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #eee;
  position: fixed;
  height: 100%;
  width: 100%;
}

.weui-grid__icon {
  width: 70rpx;
  height: 70rpx;
}

.weui-grid {
  width: 20%;
  border: 0rpx;
  padding: 3rpx;
}

.title {
  font-size: 25rpx;
}

.page__bd {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.grids_block {
  border-radius: 10rpx;
  border: 3rpx white solid;
  background-color: white;
  padding-bottom: 10rpx;
  height: 20%;
}

.head_bar {
  height: 80rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #0080ff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.lunbotu-container {
  width: 100%;
  height: 250rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

