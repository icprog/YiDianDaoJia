.status-box {
  font-size: 25rpx;
  width: 40%;
  height: 100%;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #eee;
  display: flex;
  flex-direction: column;
}

.status-box .status-label {
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  line-height: 100rpx;
  background-color: #eee;
}

.status-box .status-label.active {
  color: #0080ff;
  background-color: #fff;
}
