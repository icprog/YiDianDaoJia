#picker {
  width: 100rpx;
  height: 10rpx;
}

.page {
  font-size: 25rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #eee;
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column; /*纵向显示*/
  justify-content: center; /*水平居中*/
}

.weui-grid__icon {
  padding: 10rpx;
  width: 100rpx;
  height: 100rpx;
}

.weui-grid {
  width: 20%;
  border: 0rpx;
  padding: 3rpx;
}

.title {
  font-size: 25rpx;
  margin-bottom: 20rpx;
}

.page__bd {
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-content: space-between;
}

.grids_block {
  border-radius: 10rpx;
  background-color: white;
}

.head_bar {
  height: 80rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #0080ff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.login_btn {
  background-color: rgba(255, 255, 255, 0);
  border: solid #0080ff 0px;
  margin: 5rpx;
  color: white;
  font-size: 25rpx;
}
