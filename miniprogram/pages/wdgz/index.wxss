.page {
  font-size: 25rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #eee;
  height: 100%;
}
.grids_block
{
  border-radius: 10rpx;
  background: white;
  margin: 20rpx;
}
.image
{
  width: 100rpx;
  height: 100rpx;
  border-radius: 400rpx;
  border: #0080ff 1rpx solid;
  margin: 10rpx;
}
.container
{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  align-items: center;
  margin: 10rpx;
  background: white;
  border-radius: 20rpx;
  padding: 10rpx;
}
.text-view
{
  flex-grow:1;
}
.jg
{
  border: 3rpx red solid;
  padding:2rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.botton-view
{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.xm-view
{
  display: flex;
  flex-direction: column;
}
.star-view
{
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  padding-left: 10rpx;
}
.xdyy
{
  background: #0080ff;
  border-radius: 15rpx;
  color: white;
  padding: 5rpx;
}



.star-image {
  width: 30rpx;
  height: 30rpx;
}