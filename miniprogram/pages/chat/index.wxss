page {
  font-size: 25rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #eee;
}

.chat-input {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10rpx;
}

.chat-input input {
  height: 70rpx;
  border: #0080ff solid 1px;
  border-radius: 0.3rem;
  padding-left: 15rpx;
  padding-right: 15rpx;
  flex-grow: 1;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.chat-input button {
  color: #fff;
  height: 70rpx;
  border: none;
  border-radius: 0.3rem;
  background-color: #0080ff;
  line-height: 70rpx;
  width: 130rpx;
  margin-right: 10rpx;
  font-size: 25rpx;
}

image {
  width: 90rpx;
  height: 90rpx;
  min-width: 90rpx;
}

.kefu-chat {
  font-size: 0.8rem;
  color: rgb(128, 125, 125);
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
}

.user-chat {
  font-size: 0.8rem;
  color: rgb(128, 125, 125);
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
}

.text {
  background: rgb(164, 186, 226);
  border-radius: 15rpx;
  padding: 10rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin: 10rpx;
}

.content text {
  word-break: break-all;
  text-align: center;
}
