/* miniprogram/pages/sjrz/index.wxss */
.page {
  font-size: 25rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  position: fixed;
  height: 100%;
  width: 100%;
}
.fb-type{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.fb-type .type-label{
  color: #495060;
  height: 36rpx;
  flex: 1;
  font-size: 28rpx;
}

.fb-type .type-icon{
  height: 36rpx;
  width: 36rpx;
}
.fb-btn{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #e64340;
  position: fixed;
  bottom: 0;
  left: 0;
  border-radius: 0;
  color: #fff;
  font-size: 28rpx;
}
.id-card
{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.id-card image
{
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 10rpx;
  width: 600rpx;
  height: 356rpx;
}